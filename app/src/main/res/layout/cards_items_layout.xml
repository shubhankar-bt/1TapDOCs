<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/newdesign"
            android:padding="6dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:outlineProvider="paddedBounds"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DefaultNameText"
                    android:paddingBottom="6dp"
                    android:typeface="sans"
                    android:text="Name -"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DefaultAccountNoText"
                    android:text="Card No. -" android:typeface="sans"
                    android:paddingBottom="7dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:id="@+id/DefaultBankNameText"
                    android:paddingBottom="6dp"
                    android:text="Bank -"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DefaultExpiryDateText"
                    android:text="Expiry Date -"
                    android:typeface="sans"
                    android:textColor="@color/black"
                    android:paddingBottom="6dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DefaultCvvNumberText"
                    android:paddingBottom="3dp"
                    android:text="CVV -"
                    android:typeface="sans"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:outlineProvider="paddedBounds"
                android:layout_weight="1.5"
                android:padding="6dp"
                android:orientation="vertical"
                android:paddingRight="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserCardName"
                    android:paddingBottom="3dp"
                    android:text="Shubhankar Das"
                    android:typeface="monospace"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserCardNumber"
                     android:paddingBottom="3dp"
                     android:typeface="monospace"
                     android:layout_marginLeft="5dp"
                    android:text="2971293785566"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserBankName"
                    android:layout_marginLeft="5dp"
                    android:typeface="monospace"
                    android:paddingBottom="3dp"
                    android:text="Central Bank Of India"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/UserCardExpiryDate"
                    android:text="08/24"
                    android:textColor="@color/black"
                    android:typeface="monospace"
                    android:paddingBottom="3dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserCardCvvNumber"
                    android:paddingBottom="3dp"
                    android:typeface="monospace"
                    android:layout_marginLeft="5dp"
                    android:text="567"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>